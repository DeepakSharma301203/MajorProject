<% layout('/layouts/boilerplate') -%>
<div class="row mt-3">
    <h1 class="col-6 offset-4"><B><i>SignUp On WanderLust</i></B></h1>
    <br><hr>
    <div class="col-6 offset-3">
        
        <form action="/signup" method="POST" class="needs-validation mb-3" novalidate>
            <div class="mb-2">
                <label for="username" class="form-label">username</label>
                <input name="username" 
                    id="username"
                    type="text" 
                    class="form-control"
                    required
                >
                <div class="valid-feedback">looks good!</div>
                <div class="invalid-feedback">Enter Valid Username</div>
            </div>
            <div class="mb-2">
                <label for="email" class="form-label">Email Id</label>
                <input name="email" 
                    id="email"
                    type="text" 
                    class="form-control"
                    required
                >
                <div class="valid-feedback">looks good!</div>
                <div class="invalid-feedback">Enter Valid Email Id</div>
            </div>
            <div class="mb-2">
                <label for="password" class="form-label">Password</label>
                <input name="password" 
                    id="password"
                    type="password" 
                    class="form-control"
                    required
                >
                <div class="valid-feedback">looks good!</div>
                <div class="invalid-feedback">Enter Valid Username</div>
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>